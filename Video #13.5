/* ====== BASE ====== */
/* Tipografía, colores y espaciado global */

:root {
  --color-texto: #1F2937;
  --color-secundario: #4B5563;
  --color-destacado: #2E5A88;
  --color-fondo: #ffffff;
  --color-fondo-suave: #f8f9fa;

  --space-xs: 0.25rem;
  --space-sm: 0.5rem;
  --space-md: 1rem;
  --space-lg: 1.5rem;
  --space-xl: 2rem;

  --radius-sm: 0.25rem;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  line-height: 1.6;
  color: var(--color-texto);
  background-color: var(--color-fondo);
  margin: 0;
  padding: var(--space-md);
}

h1, h2 {
  margin-top: var(--space-lg);
  margin-bottom: var(--space-md);
}

h1 {
  font-size: 1.875rem; /* 30px */
  line-height: 1.2;
}

h2 {
  font-size: 1.5rem; /* 24px */
  line-height: 1.3;
  color: var(--color-destacado);
}

p, li {
  margin-bottom: var(--space-sm);
}

a {
  color: inherit;
}


/* ====== LAYOUT ====== */
/* Estructura de página */

header {
  padding-bottom: var(--space-md);
  border-bottom: 1px solid #e5e7eb;
}

main {
  max-width: 800px;
  margin: 0 auto;
}

footer {
  margin-top: var(--space-xl);
  padding-top: var(--space-md);
  border-top: 1px solid #e5e7eb;
  color: var(--color-secundario);
  font-size: 0.875rem; /* 14px */
}


/* ====== COMPONENTES ====== */
/* Menú, tarjetas, botones */

.menu {
  display: flex;
  gap: var(--space-md);
  flex-wrap: wrap;
}

.menu-link {
  text-decoration: none;
  color: var(--color-secundario);
  font-weight: 500;
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-sm);
}

.menu-link:hover {
  background-color: var(--color-fondo-suave);
}


/* ====== UTILIDADES ====== */
/* Clases de apoyo */

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}
